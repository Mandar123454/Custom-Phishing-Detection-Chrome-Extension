<!DOCTYPE html>
<html>
<head>
  <title>Phishing Detection</title>
  <meta charset="utf-8">
  <link rel="stylesheet" href="popup.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css">
</head>
<body>
  <div class="container">
    <h1><i class="fas fa-shield-alt"></i> Phishing Detection</h1>
    <div id="status" class="status">
      <div class="loader" id="loader"></div>
      <span id="statusText">Checking current page...</span>
    </div>
    
    <div id="result" class="result">
      <div id="safetyScore" class="safety-score">
        <span id="scoreText">Safety Score</span>
        <span id="score">-</span>
      </div>
      
      <div class="details">
        <h3><i class="fas fa-search"></i> Detection Details</h3>
        <ul id="detectionDetails">
          <!-- Details will be populated by JavaScript -->
        </ul>
      </div>
    </div>
    
    <div class="buttons">
      <button id="scanButton"><i class="fas fa-sync"></i> Scan Again</button>
      <button id="historyButton"><i class="fas fa-history"></i> History</button>
      <button id="dashboardButton"><i class="fas fa-chart-bar"></i> Dashboard</button>
    </div>
    
    <div id="history" class="history">
      <h3>Recent Scans</h3>
      <ul id="historyList">
        <!-- History will be populated by JavaScript -->
      </ul>
    </div>
  </div>
  <script src="popup.js"></script>
</body>
</html>
