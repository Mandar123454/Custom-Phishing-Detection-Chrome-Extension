<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Phishing Detection Dashboard</title>
    <link rel="stylesheet" href="dashboard.css">
    <!-- Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>
    <div class="container">
        <header>
            <h1><span class="icon"><i class="fas fa-shield-alt"></i></span> Phishing Detection Dashboard</h1>
            <div class="header-right">
                <div class="date-range">
                    <span>Period:</span>
                    <select id="time-period">
                        <option value="today">Today</option>
                        <option value="week" selected>Last 7 days</option>
                        <option value="month">Last 30 days</option>
                        <option value="quarter">Last 90 days</option>
                    </select>
                </div>
                <div class="theme-toggle">
                    <i class="fas fa-sun"></i>
                </div>
            </div>
        </header>

        <div class="stats">
            <div class="stat-card safe">
                <h3><i class="fas fa-check-circle"></i> Safe URLs</h3>
                <div class="stat-value">326</div>
            </div>
            <div class="stat-card warning">
                <h3><i class="fas fa-exclamation-triangle"></i> Suspicious URLs</h3>
                <div class="stat-value">45</div>
            </div>
            <div class="stat-card danger">
                <h3><i class="fas fa-ban"></i> Phishing Attempts</h3>
                <div class="stat-value">18</div>
            </div>
            <div class="stat-card">
                <h3><i class="fas fa-chart-line"></i> Detection Rate</h3>
                <div class="stat-value">99.2%</div>
            </div>
        </div>

        <div class="detection-summary">
            <h3>Detection Summary</h3>
            <div class="score-distribution">
                <div class="score-bar safe"></div>
                <div class="score-bar warning"></div>
                <div class="score-bar danger"></div>
            </div>
            <div class="score-legend">
                <span>Safe (65%)</span>
                <span>Suspicious (25%)</span>
                <span>Dangerous (10%)</span>
            </div>
        </div>

        <div class="section">
            <div class="section-header">
                <h2><span class="icon"><i class="fas fa-search"></i></span> URL Check</h2>
            </div>
            <form id="url-check-form">
                <input type="url" placeholder="Enter a URL to check for phishing..." required>
                <button type="submit"><i class="fas fa-shield-alt"></i> Check URL</button>
            </form>
        </div>

        <div class="section">
            <div class="section-header">
                <h2><span class="icon"><i class="fas fa-history"></i></span> Recent Detections</h2>
                <button class="action-button" id="export-data-btn">
                    <i class="fas fa-download"></i> Export Data
                </button>
            </div>
            <div class="data-table-container">
                <table class="data-table">
                    <thead>
                        <tr>
                            <th>URL</th>
                            <th>Risk Score</th>
                            <th>Detection Date</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>https://suspicious-site.com/login</td>
                            <td>85/100</td>
                            <td>2023-06-15</td>
                            <td><span class="status-danger">High Risk</span></td>
                            <td>
                                <button class="action-button view-details-btn" data-id="1">
                                    <i class="fas fa-eye"></i> Details
                                </button>
                            </td>
                        </tr>
                        <tr>
                            <td>https://fake-bank.com/verify</td>
                            <td>92/100</td>
                            <td>2023-06-14</td>
                            <td><span class="status-danger">High Risk</span></td>
                            <td>
                                <button class="action-button view-details-btn" data-id="2">
                                    <i class="fas fa-eye"></i> Details
                                </button>
                            </td>
                        </tr>
                        <tr>
                            <td>https://shop.legitimate-site.com/login?ref=234</td>
                            <td>45/100</td>
                            <td>2023-06-13</td>
                            <td><span class="status-warning">Medium Risk</span></td>
                            <td>
                                <button class="action-button view-details-btn" data-id="3">
                                    <i class="fas fa-eye"></i> Details
                                </button>
                            </td>
                        </tr>
                        <tr>
                            <td>https://legitimate-site.com</td>
                            <td>12/100</td>
                            <td>2023-06-12</td>
                            <td><span class="status-safe">Safe</span></td>
                            <td>
                                <button class="action-button view-details-btn" data-id="4">
                                    <i class="fas fa-eye"></i> Details
                                </button>
                            </td>
                        </tr>
                        <tr>
                            <td>https://email-verify.suspicious-domain.net</td>
                            <td>78/100</td>
                            <td>2023-06-11</td>
                            <td><span class="status-danger">High Risk</span></td>
                            <td>
                                <button class="action-button view-details-btn" data-id="5">
                                    <i class="fas fa-eye"></i> Details
                                </button>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <div class="section">
            <div class="section-header">
                <h2><span class="icon"><i class="fas fa-cog"></i></span> API Configuration</h2>
            </div>
            <div style="display: flex; gap: 15px; margin-top: 15px;">
                <button class="primary-button" id="configure-api-btn">
                    <i class="fas fa-wrench"></i> Configure API
                </button>
                <button class="action-button" id="connect-api-btn">
                    <i class="fas fa-plug"></i> Test Connection
                </button>
                <button class="action-button" id="update-model-btn">
                    <i class="fas fa-sync"></i> Update Model
                </button>
            </div>
        </div>
    </div>

    <script src="dashboard.js"></script>
    <script src="standalone-charts.js"></script>
</body>
</html>
